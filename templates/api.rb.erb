
require "peddler/api"
require "peddler/marketplace"

module Peddler
  class << self
    def <%= name_with_version %>(...)
      API::<%= class_name %>.new(...)
    end
  end

  class API
    <%= title %>
    #
    <%= description %>
    class <%= class_name %> < API
      <% operations.each do |operation| %>
        <%= operation.render %>
      <% end %>
    end
  end
end
